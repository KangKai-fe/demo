extends ../layout

block content
    .container
        .row
            each cat in categories
                    .panel-heading
                        h3 #{cat.name}
                    .panel-body
                                .col-md-2
                                    .thumbnail
                                        a(href="/detail/#{item._id}")
                                            img(src="#{item.poster}", alt="#{item.title}")
                                            .caption
                                                h3 #{item.title}
                                                p: a.btn.btn-primary(href="/detail/#{item._id}", role="button") 观看预告片